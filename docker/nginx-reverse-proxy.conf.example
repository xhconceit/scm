# ========================================
# Nginx 反向代理配置示例（生产环境）
# ========================================
# 用于在生产服务器上配置 HTTPS 和反向代理
# 位置：/etc/nginx/sites-available/scm
#
# 使用步骤：
# 1. 复制到 /etc/nginx/sites-available/scm
# 2. 修改域名和证书路径
# 3. 创建软链接：ln -s /etc/nginx/sites-available/scm /etc/nginx/sites-enabled/
# 4. 测试配置：nginx -t
# 5. 重启 Nginx：systemctl restart nginx

# HTTP -> HTTPS 重定向
server {
    listen 80;
    listen [::]:80;
    server_name scm.example.com;  # 修改为你的域名
    
    # Let's Encrypt 验证路径
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    # 重定向到 HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS 主配置
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name scm.example.com;  # 修改为你的域名
    
    # SSL 证书配置（使用 Let's Encrypt）
    ssl_certificate /etc/letsencrypt/live/scm.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/scm.example.com/privkey.pem;
    
    # SSL 优化配置
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # 安全头部
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # 日志配置
    access_log /var/log/nginx/scm-access.log;
    error_log /var/log/nginx/scm-error.log;
    
    # 客户端上传大小限制
    client_max_body_size 10M;
    
    # Gzip 压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript 
               application/x-javascript application/xml+rss 
               application/json application/javascript;
    
    # API 代理到 Server 服务
    location /api {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # WebSocket 支持
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        
        # 代理头部
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # 健康检查端点
    location /health {
        proxy_pass http://localhost:3000/health;
        access_log off;
    }
    
    # 前端静态文件
    location / {
        proxy_pass http://localhost:8080;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

# MQTT WebSocket 代理（可选）
server {
    listen 8084 ssl http2;
    listen [::]:8084 ssl http2;
    server_name scm.example.com;
    
    # SSL 证书
    ssl_certificate /etc/letsencrypt/live/scm.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/scm.example.com/privkey.pem;
    
    # WebSocket 代理到 MQTT
    location / {
        proxy_pass http://localhost:8083;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        
        # MQTT 长连接
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }
}

# ========================================
# 配置说明
# ========================================
#
# 1. 域名配置
#    - 将所有 scm.example.com 替换为你的实际域名
#
# 2. SSL 证书
#    - 使用 Certbot 获取免费证书：
#      certbot --nginx -d scm.example.com
#
# 3. 服务端口
#    - Admin: localhost:8080
#    - Server: localhost:3000
#    - MQTT WS: localhost:8083
#
# 4. 防火墙配置
#    ufw allow 'Nginx Full'
#    ufw allow 22/tcp
#    ufw enable
#
# 5. 自动续期证书
#    certbot renew --dry-run
#    # 添加到 crontab
#    0 0 1 * * certbot renew --quiet
#
# 6. 优化建议
#    - 启用 HTTP/2
#    - 配置缓存
#    - 使用 CDN
#    - 限流保护
#
# ========================================

