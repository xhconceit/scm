name: Docker Build and Deploy

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}

jobs:
  # è¿è¡Œæµ‹è¯•
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        node-version: [18.x]
    
    steps:
      - name: ğŸ“¥ Checkout ä»£ç 
        uses: actions/checkout@v3

      - name: ğŸ—ï¸ å®‰è£… pnpm
        uses: pnpm/action-setup@v2
        with:
          version: 8

      - name: ğŸ”§ è®¾ç½® Node.js
        uses: actions/setup-node@v3
        with:
          node-version: ${{ matrix.node-version }}
          cache: 'pnpm'

      - name: ğŸ“¦ å®‰è£…ä¾èµ–
        run: pnpm install --frozen-lockfile

      - name: ğŸ” Lint æ£€æŸ¥
        run: |
          cd apps/server && pnpm lint
          cd ../admin && pnpm lint

      - name: ğŸ§ª è¿è¡Œæµ‹è¯•
        run: |
          cd apps/server && pnpm test
          cd ../admin && pnpm test

      - name: ğŸ“Š ä¸Šä¼ æµ‹è¯•è¦†ç›–ç‡
        uses: codecov/codecov-action@v3
        with:
          files: ./apps/server/coverage/lcov.info,./apps/admin/coverage/lcov.info

  # æ„å»º Docker é•œåƒ
  build:
    needs: test
    runs-on: ubuntu-latest
    if: github.event_name == 'push'
    
    permissions:
      contents: read
      packages: write

    strategy:
      matrix:
        service: [server, admin]

    steps:
      - name: ğŸ“¥ Checkout ä»£ç 
        uses: actions/checkout@v3

      - name: ğŸ”§ è®¾ç½® Docker Buildx
        uses: docker/setup-buildx-action@v2

      - name: ğŸ”‘ ç™»å½•åˆ° GitHub Container Registry
        uses: docker/login-action@v2
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: ğŸ“ æå–å…ƒæ•°æ®
        id: meta
        uses: docker/metadata-action@v4
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}/${{ matrix.service }}
          tags: |
            type=ref,event=branch
            type=ref,event=pr
            type=semver,pattern={{version}}
            type=semver,pattern={{major}}.{{minor}}
            type=sha

      - name: ğŸ—ï¸ æ„å»ºå¹¶æ¨é€ Docker é•œåƒ
        uses: docker/build-push-action@v4
        with:
          context: .
          file: ./docker/${{ matrix.service }}/Dockerfile
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  # éƒ¨ç½²åˆ°æœåŠ¡å™¨ï¼ˆå¯é€‰ï¼‰
  deploy:
    needs: build
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main'
    
    steps:
      - name: ğŸ“¥ Checkout ä»£ç 
        uses: actions/checkout@v3

      - name: ğŸš€ éƒ¨ç½²åˆ°ç”Ÿäº§æœåŠ¡å™¨
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.DEPLOY_HOST }}
          username: ${{ secrets.DEPLOY_USER }}
          key: ${{ secrets.DEPLOY_SSH_KEY }}
          script: |
            cd /path/to/scm
            git pull origin main
            docker-compose -f docker/docker-compose.yml pull
            docker-compose -f docker/docker-compose.yml up -d
            docker system prune -f

      - name: âœ… å¥åº·æ£€æŸ¥
        run: |
          sleep 10
          curl -f http://${{ secrets.DEPLOY_HOST }}:3000/health || exit 1
          curl -f http://${{ secrets.DEPLOY_HOST }}:8080/health || exit 1

      - name: ğŸ“§ å‘é€é€šçŸ¥
        if: always()
        uses: 8398a7/action-slack@v3
        with:
          status: ${{ job.status }}
          text: 'éƒ¨ç½²åˆ°ç”Ÿäº§ç¯å¢ƒ ${{ job.status }}'
          webhook_url: ${{ secrets.SLACK_WEBHOOK }}

  # å®‰å…¨æ‰«æ
  security:
    runs-on: ubuntu-latest
    
    steps:
      - name: ğŸ“¥ Checkout ä»£ç 
        uses: actions/checkout@v3

      - name: ğŸ”’ è¿è¡Œ Trivy æ¼æ´æ‰«æ
        uses: aquasecurity/trivy-action@master
        with:
          scan-type: 'fs'
          scan-ref: '.'
          format: 'sarif'
          output: 'trivy-results.sarif'

      - name: ğŸ“¤ ä¸Šä¼ æ‰«æç»“æœ
        uses: github/codeql-action/upload-sarif@v2
        with:
          sarif_file: 'trivy-results.sarif'

