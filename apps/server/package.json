{
  "name": "@scm/server",
  "version": "1.0.0",
  "description": "SCM 后端服务",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist node_modules",
    "postinstall": "prisma generate",
    "prisma:db": "prisma db push"
  },
  "dependencies": {
    "koa": "^2.14.2",
    "@koa/router": "^12.0.1",
    "@koa/cors": "^4.0.0",
    "koa-bodyparser": "^4.4.1",
    "aedes": "^0.51.0",
    "mqtt": "^5.3.0",
    "ws": "^8.14.2",
    "@prisma/client": "^5.7.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.12",
    "@types/koa__router": "^12.0.4",
    "@types/koa__cors": "^4.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node-dev": "^2.0.0",
    "prisma": "^5.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.8",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "vue-demi"
    ]
  }
}
